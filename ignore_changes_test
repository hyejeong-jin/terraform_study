resource "local_file" "abc" {
  content  = "lifecycle test - step 5"
  filename = "${path.module}/abc.txt"

  lifecycle {
    ignore_changes = [
      content
    ]
  }
}

resource "local_file" "def" {
  depends_on = [
    local_file.abc
  ]
  content  = "456!"
  filename = "${path.module}/def.txt"
}

